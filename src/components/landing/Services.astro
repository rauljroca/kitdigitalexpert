---
const testimonials = [
{
    name: "Servicios UI/UX",
    name2: "Diseño de interfaces y experiencias de usuario:",
    anchor: "uiux",
    info:
      [
        "Diseño de wireframes y prototipos",
        "Evaluación de usabilidad",
        "Investigación de usuarios",
        "Diseño de interacciones",
      ]
  },
  {
    name: "Diseño gráfico",
    name2: "Creación y refuerzo de identidad de marca:",
    anchor: "uiux",
    info:
      [
        "Diseño de logotipos",
        "Desarrollo de guías de estilo",
        "Creación de materiales publicitarios",
        "Diseño de empaques y etiquetas",
      ]
  }
];
// Function to calculate `data-aos-duration` based on index
function calculateAosDuration(index) {
  return 1500 + index * 500; // Example: Increment duration by 500ms for each project
}
---

<section class="bg-primary">
  <div class="px-8 2xl:max-w-7xl mx-auto mb-32">
    <div class="flex flex-col text-secondary mt-12 gap-12 lg:gap-32">
      { testimonials.map((opinion, index) => (
        <div id={opinion.anchor} class="grid grid-cols-1 lg:items-end mb-8">
          <div data-aos="fade-left"
         data-aos-duration={calculateAosDuration(index)}>
              <p class="text-5xl lg:text-7xl lg:leading-14">{ opinion.name }</p>
              <p class="text-3xl lg:leading-6 mt-3">{ opinion.name2 }</p>
              <ul class="mt-3">
                {opinion.info.map((info, subIndex) => (
                  <li class="flex gap-x-3">
                    <svg class="h-6 w-5 flex-none text-indigo-400" viewBox="0 0 20 20" fill="#fff" aria-hidden="true" data-slot="icon"><path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 0 1 .143 1.052l-8 10.5a.75.75 0 0 1-1.127.075l-4.5-4.5a.75.75 0 0 1 1.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 0 1 1.05-.143Z" clip-rule="evenodd"></path>
                    </svg>
                    { info }
                  </li>
                ))}
              </ul>
          </div>
         </div>
        ))
      }
    </div>
  </div>
</section>
